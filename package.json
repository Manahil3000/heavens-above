name: Documentation Deployment

on:
  push:
    branches:
      - main

jobs:
  deploy-docs:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Generate documentation
        run: |
          mkdir -p docs
          echo "<!DOCTYPE html><html><head><title>Heavens Above Docs</title></head><body><h1>Heavens Above Project</h1><p>This documentation was automatically deployed using GitHub Actions.</p></body></html>" > docs/index.html

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./docs
